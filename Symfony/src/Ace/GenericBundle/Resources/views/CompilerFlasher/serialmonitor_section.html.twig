<div id="serial_util">
    <span id="speed_label" class="help-inline">Speed: </span>
    <select id="baudrates" style="width:90px;">
            <option>9600</option>
            <option>19200</option>
            <option>28800</option>
            <option>38400</option>
            <option>57600</option>
            <option>115200</option>
        </select>
    <button class="btn" id="toggle_connect_serial" onclick="connect();">
        <i class="icon-list-alt"></i>
        Open Serial Monitor
    </button>

    <div id="serial_monitor_content" style="display:none;">
        <div class="input-append">
            <input id="text2send" type="text" placeholder="Serial Message">
            <button id="serial_send" onclick="serialSend()" class="btn"> Send
            </button>
        </div>
        <pre id="serial_hud" class="well"  style="overflow-y:scroll"></pre>
    </div
</div>
